                        <tei:w xml:id="Lep_9_l_1_w_5" xml:lang="xcg-Ital-x-xcglep">iś<tei:unclear>o</tei:unclear>s</tei:w>
                        <!-- Leida;Lep_9_l_1_w_6;kaṛite -->
                        <tei:w xml:id="Lep_9_l_1_w_6" xml:lang="xcg-Ital-x-xcglep">ka<tei:unclear>r</tei:unclear>ite</tei:w>
                        <!-- Leida;Lep_9_l_1_w_7;palam -->
