                                <tei:rs type="wordDivision" corresp="#text_A">punctuation</tei:rs> 
                                <tei:rs type="wordDivision" corresp="#text_B">scriptio continua</tei:rs> 
                                <tei:note>Three overlapping dots are used as word separators in inscription A, while probably scriptio continua is used in inscription B</tei:note>
                            </tei:scriptNote>
                        </tei:scriptDesc>
