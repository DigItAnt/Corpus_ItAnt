                    <tei:ab>
                        <tei:lb n="3"/>]ni:metalui[
                    </tei:ab>
                </tei:div>
            </tei:div>
            <tei:div type="edition" subtype="interpretative" xml:space="preserve">
                <tei:div type="textpart" subtype="text_A" n="side_a-A" style="text-direction:r-to-l" rend="ductus:sinistrorse">
                    <tei:ab>                               
                        <tei:lb n="1" xml:id="Lep_5_l_1"/>
                        <!-- Leida;Lep_5_l_1_w_1;slaniai -->
                        <tei:name type="individual" xml:id="Lep_5_l_1_w_1" xml:lang="xcg-Ital-x-xcglep" ref="#'p1">slaniai</tei:name>
                        <!-- Leida;Lep_5_l_1_w_2;uerkalai -->
                        <tei:name type="second" xml:id="Lep_5_l_1_w_2" xml:lang="xcg-Ital-x-xcglep" ref="#p1">uerkalai</tei:name>
                        <!-- Leida;Lep_5_l_1_w_3;pala -->
                        <tei:w  xml:id="Lep_5_l_1_w_3" xml:lang="xcg-Ital-x-xcglep">pala</tei:w>
                    </tei:ab>
                </tei:div>
                <tei:div type="textpart" subtype="text_B" n="side_a-B" style="text-direction:r-to-l" rend="ductus:sinistrorse">
                    <tei:ab>                               
                        <tei:lb n="2" xml:id="Lep_5_l_2"/>
                        <!-- Leida;Lep_5_l_2_w_1;tisiui -->
                        <tei:name type="individual" xml:id="Lep_5_l_2_w_1" xml:lang="xcg-Ital-x-xcglep" ref="#p2">tisiui</tei:name>
                        <!-- Leida;Lep_5_l_2_w_2;piuotialui -->
                        <tei:name type="second"  xml:id="Lep_5_l_2_w_2" xml:lang="xcg-Ital-x-xcglep" ref="#p2">piuotialui</tei:name>
