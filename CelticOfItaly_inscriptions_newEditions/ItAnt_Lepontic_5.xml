                    <tei:ab>
                        <tei:lb n="1"/>slaniai:uerkalai:pala                    
                    </tei:ab>
                </tei:div>
                <tei:div type="textpart" subtype="text_B" n="side_a-B" style="text-direction:r-to-l" rend="ductus:sinistrorse">
