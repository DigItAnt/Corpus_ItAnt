                        <tei:gap reason="lost" quantity="3" unit="character"/>
                        <!-- Leida;Osc_41_l_1_w_1;kah -->
                            <tei:w xml:lang="osc-Ital-x-oscetr" xml:id="Osc_42_l_1_w_1"><tei:unclear>k</tei:unclear>ah</tei:w>
                        <tei:w xml:lang="osc-Ital-x-oscetr" xml:id="Osc_42_l_1_w_2">z<tei:gap reason="lost" quantity="2" unit="character"/></tei:w>
                        <tei:gap reason="lost" quantity="3" unit="character"/>
                    </tei:ab>
                </tei:div>
            </tei:div>
