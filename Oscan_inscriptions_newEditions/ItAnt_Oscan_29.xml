            <tei:div type="edition" subtype="interpretative" xml:space="preserve">
                <tei:div type="textpart" n="face_a" style="text-direction:r-to-l" rend="ductus:sinistrorse">
                    <tei:ab>   
                        <tei:lb n="1" xml:id="Osc_29_l_1"/>
                        <!-- Leida;Osc_29_l_1_w_1;maraheis -->
                            <tei:name type="gamonymic" xml:lang="osc-Ital-x-oscetr" xml:id="Osc_29_l_1_w_1" ref="#p1">maraheis</tei:name>
                            <tei:pc unit="word">:</tei:pc>
                        <!-- Leida;Osc_29_l_1_w_2;úpfalliu -->
                            <tei:name type="gentilicium" xml:lang="osc-Ital-x-oscetr" xml:id="Osc_29_l_1_w_2" ref="#p1">úpfalliu</tei:name>
