                        <tei:lem corresp="#Osc_41_l_2">]ṣtlus</tei:lem>
                        <tei:rdg corresp="#Osc_1_l_2">]stlús .[
                            <tei:ref target="http://zotero.org/groups/2552746/items/IMWMSAVE"><tei:bibl>Rix, ST  2002</tei:bibl></tei:ref>
