<!-- Leida;Osc_518_l_1;v(ibis ?) k() -->
                            <tei:name type="praenomen" xml:lang="osc-Ital-x-oscetr" xml:id="Osc_518_l_1_w_1" ref="#p1"><tei:expan><tei:abbr>v</tei:abbr><tei:ex cert="low">ibis</tei:ex></tei:expan></tei:name>
